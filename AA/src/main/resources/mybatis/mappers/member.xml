                           company_tel,
                           company_grade,
                           company_totalprice,
                           status,
                           joinDate,
                           smssts_yn,
                           emailsts_yn,
                           nickname,
                           totalWork.
                           company_intro,
                           company_zipcode,
                           company_roadAdd,
                           company_jibunAdd,
                           company_namujiAdd)
							 values(#{id},
									#{pwd},
									#{company_Number},
                                 	#{capName},
                                   	#{company_name},
                                   	#{email},
                                    #{company_phone},
                                    #{company_tel},
                                    #{company_grade},
                                    #{company_totalprice},
                                    #{status},
                                    #{joinDate},
                                    #{smssts_yn},
                                    #{emailsts_yn},
                                    #{nickname},
                                    #{totalWork},
                                    #{company_intro},
                                    #{company_zipcode},
                                    #{company_roadAdd},
                                    #{company_jibunAdd},
                                    #{company_namujiAdd})
   ]]>      
  </insert>
</mapper>